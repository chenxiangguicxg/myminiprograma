/* components/x-runItem/x-runItem.wxss */
.runItem {
  display: flex;
  height: 100px;
  border-bottom: 5px solid red;
}

.runItem.runStar {
  border-bottom: 5px solid yellow;
}

.runItem .fm {
  margin: 10px;
  margin-right: 0;
  width: 140px;
  height: 80px;
  background-color: orange;
}

.runItem .fm .fmImage {
  width: 100%;
  height: 100%;
}

.runItem .desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10px;
  font-size: 13px;
}

.runItem .desc .runName {
  font-size: 14px;
  font-weight: bold;
}

.runItem .desc .runType {
  color: gray;
}

.runItem .desc .runTime {
  color: red;
}

.runItem .desc .runLevel {
  color: brown;
}